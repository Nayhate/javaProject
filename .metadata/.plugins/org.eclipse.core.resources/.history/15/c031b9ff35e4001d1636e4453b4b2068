package telas;

public class TelaDeGerenciamentoDeProduto {
	public static void mostrar() {
		Prompt.linhaEmBranco();
		
		System.out.println("Opção 1 lista de produto.");
		System.out.println("Opção 2 adicionar produto.");
		System.out.println("Opção 3 alterar produto.");
		System.out.println("Opção 4 excluir produto.");
		System.out.println("Opção 5 voltar para a tela de gerenciamento.");
		
		
		Integer opcao = Prompt.lerInteiro();
		
		switch(opcao){
			case 1: {
				TelaDeGerenciamentoDeProduto.listar();
				break;
			}
			case 2:{
				TelaDeGerenciamentoDeProduto.adicionar();
				break;
			}
			case 3:{
				TelaDeGerenciamentoDeProduto.alterar();
				break;
			}
			case 4:{
				TelaDeGerenciamentoDeProduto.excluir();
				break;
			}
			case 5:{
				TelaDeGerenciamento.mostrar();
				break;
			}
		}}
		
	public static void listar() {		
	}
	
	public static void adicionar() {
		
	}
	
	public static void alterar() {
		
	}
	public static void excluir() {
		
	}
}
