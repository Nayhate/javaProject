package principal.telas;

import principal.util.Prompt;

public class TelaDeGerenciamentoDeVenda {
	public static void mostrar() {
		Prompt.linhaEmBranco();
		
		Prompt.imprimir("Opção 1 lista de vendas.");
		Prompt.imprimir("Opção 2 alterar vendas.");
		Prompt.imprimir("Opção 3 excluir vendas.");
		Prompt.imprimir("Opção 4 voltar para a tela de gerenciamento.");
		
		
		Integer opcao = Prompt.lerInteiro();
		
		switch(opcao){
			case 1: {
				TelaDeGerenciamentoDeVenda.listar();
				break;
			}
			case 2:{
				TelaDeGerenciamentoDeVenda.alterar();
				break;
			}
			case 3:{
				TelaDeGerenciamentoDeVenda.excluir();
				break;
			}
			case 4:{
				TelaDeGerenciamento.mostrar();
				break;
			}}
		}
		
	public static void listar() {		
	}

	public static void alterar() {
		
	}
	public static void excluir() {
		
	}
}
